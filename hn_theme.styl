base-color = #ff8937

text-color = #444

/* Base styles */
html, body
    background #fff
    margin 0
    padding 0
    font 15px/1.5 Helvetica Neue, Arial, sans-serif
    color text-color

a
    color #ffac5b
    text-decoration none

a:hover
    /*color #fdbe80*/
    text-decoration underline

table
    border-collapse collapse
    border none

tr, td
    border none
    padding 0

/**
 * Some selectors are pretty contrived but I think it's the only
 * way to select some things. Please correct me if I'm wrong!
 */
body > center > table
    // Header
    tbody > tr:first-child > td > table
        background base-color
        width 100%

        td
            height 50px

            &:last-child
                text-align right

        &
            color transparent

        a
            color #fbf9f7
