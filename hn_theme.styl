base-color = #ff8937

text-color = #555

link-color = #ffac5b

/* Base styles */
html, body
    background #fff
    margin 0
    padding 0
    font 15px/1.5 Helvetica Neue, Arial, sans-serif
    color text-color

a
    color link-color
    text-decoration none

a:hover
    /*color #fdbe80*/
    text-decoration underline

table
    border-collapse collapse
    border none

tr, td
    border none
    padding 0

/**
 * Some selectors are pretty contrived but I think it's the only
 * way to select some things. Please correct me if I'm wrong!
 */
body
    &.error
        text-align center
        padding-top 140px
        font-size 40px
        font-weight 100
        letter-spacing 1px

        a
            display block
            font-size 20px
            font-weight 100
            

    > center
        display block
        width 900px
        margin 0 auto

        > table
            width 100%

            // Header
            > tbody 
                > tr:first-child > td > table
                    background base-color
                    color lighten(base-color, 70%)
                    font-weight 100
                    width 100%

                    td
                        padding 15px 0

                        // Logo td
                        &:first-child
                            square-size = 30px
                            width square-size

                            padding-left 20px
                            padding-right 10px

                            a
                                display block
                                width square-size
                                height square-size
                                background #fff
                                border-radius 100%

                                &:after
                                    content 'Y'
                                    width square-size
                                    height square-size
                                    display block
                                    line-height square-size + 2px
                                    text-align center
                                    font-size 22px
                                    font-weight 200
                                    color base-color

                                img
                                    display none

                        // Title and links td
                        &:nth-child(2)
                            b
                                margin-right 25px
                                a
                                    font-weight 400
                                    letter-spacing 0px

                            // Remove spacer gif
                            img
                                display none

                            .pagetop
                                > a, > .topsel
                                    margin-right 10px

                        // User td
                        &:last-child
                            text-align right
                            padding-right 20px

                            a[href^=logout]
                                margin-left 10px

                    a
                        font-weight 100
                        letter-spacing 1px
                        color #fbf9f7

                > tr:nth-child(3) > td
                    padding 20px 20px 0 20px

                    > table
                        width 100%
                        font-weight 200
                        color lighten(text-color, 40%)

                            


                    td.title
                        padding 25px 0 5px 0

                        + td
                            padding 22px 10px 3px 0

                        a
                            color darken(link-color, 10%)

                        a:visited
                            color lighten(link-color, 50%)

                    td.subtext
                        font-size 13px

                > tr:nth-child(4) > td
                    padding-top 40px

                    .yclinks a
                            margin-right 10px
                            font-weight 200
