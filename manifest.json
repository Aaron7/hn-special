{
  "manifest_version": 2,

  "name": "Special HN Theme",
  "description": "This extension refreshes the visual appearance of Hacker News.",
  "version": "1.0",

  "permissions": [
    "https://news.ycombinator.com/",
    "http://news.ycombinator.com/"
  ],
  
  "content_scripts": [
    {
      "matches": [ "http://news.ycombinator.com/*", "https://news.ycombinator.com/*" ],
      "js": [
        "utility.js",
        "clear_styles.js",
        "content_tweaks.js",
        "settings.js"
      ],
      "css": [ "hn_theme.css" ],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": ["gear.svg", "defaults.json"]
}
